<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="#677E7373"
        android:background="#DACDCD"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Summary"
            android:textColor="#D71C1B1B"
            android:textSize="34sp"
            android:textStyle="bold">

        </TextView>

    <!-- the first element in vertical orientation-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFFFFF"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"

                android:text="Percentage of exercise time in the past week"
                android:textColor="#3F6216"
                android:textSize="14sp"
                android:textStyle="bold" />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp" />
        </androidx.cardview.widget.CardView>

        <!-- the second element in vertical orientation-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <!--        the first element in horizontal orientation-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Calories burned in the past week"
                    android:textColor="#3F6216"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/Barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    />
            </androidx.cardview.widget.CardView>

            <!--        the second element in horizontal orientation-->
<!--            <androidx.cardview.widget.CardView-->
